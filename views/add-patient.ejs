                    <input type="number" class="" name="heightFeet" id="height-feet" placeholder="Height (feet)" required>
                </div>
                <div class="">
                    <input type="number" class="" name="heightInches" id="height-inches" placeholder="Height (inches)" required>
                </div>
                <div class="">
                    <input type="number" class="" name="weight" id="weight" placeholder="weight" required>
                </div>
                <div class="">
                    <input type="number" class="" name="areaCode" id="area-code" placeholder="Area Code" required>
                </div>
                <div class="">
                    <input type="tel" class="" name="phoneNumber" id="phone-number" placeholder="Telephone" required>
                </div>
                <div class="">
                    <input type="email" class="" name="email" id="email" placeholder="Email " required>
                </div>
                <div class="">
                    <input type="text" class="" name="street" id="street" placeholder="Street address" required>
                </div>
