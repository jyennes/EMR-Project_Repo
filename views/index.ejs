<%- include ('partials/header.ejs'); -%>
    <div>
        <a  href="/add" title="Add a new patient">Add patient</a>

        <% if (patient.length > 0) {%>
            <table>
                <thead>
                    <tr>
                        <th scope="col">Patient Portal</th>
                        <th scope="col">ID</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Date of Birth</th>
                        <th scope="col">Height (feet)</th>
                        <th scope="col">Height (inches)</th>
                        <th scope="col">weight</th>
                        <!-- <th scope="col">Area Code</th> -->
                        <th scope="col">Phone Number</th>
                        <th scope="col">Email</th>
                        <th scope="col">Street address</th>
                        <!-- <th scope="col">Zip ID</th>
                        <th scope="col">Doc ID</th> -->
                    </tr>
                </thead>
                <tbody>
                    <% patient.forEach((patient, index) => { %>
                        <tr>
                            <td><a href="/record/<%= patient.id %> target="_blank" rel="noopener">View Record</a></td>
                            <th scope="row"><%= patient.id %></th>
                            <td><%= patient.lastName %> </td>
                            <td><%= patient.firstName %> </td>
                            <td><%= patient.birthDate %> </td>
                            <td><%= patient.heightFeet %> </td>
                            <td><%= patient.heightInches %> </td>
                            <td><%= patient.weight %> </td>
                            <!-- <td><#%= patient.areaCode %> </td> -->
                            <td><%= patient.phoneNumber %> </td>
                            <td><%= patient.email %> </td>
                            <td><%= patient.street %> </td>
                            <!-- <td><#%= patient.zipId %> </td>
                            <td><#%= patient.docID %> </td> -->
                            <td>
                                <a href="/edit/<%= patient.id %>" target="_blank" rel="noopener">Edit</a>
                                <a href="/delete/<%= patient.id %>">Delete</a>
                            </td>
                        </tr> 
                    <% }) %>
                </tbody>
            </table> 
        <% } else { %>
            <p>No Patients found. Go <a href="/add" >here</a> to add patients.</p>
        <% } %>
    </div>
</div>
</body>
</html>