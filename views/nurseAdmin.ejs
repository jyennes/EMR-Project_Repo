<%- include ('partials/header.ejs'); -%>
    <div class="container-fluid">
        <% if (patient.length > 0) {%>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Change Nurse ID</th>
                        <th scope="col">Nurse ID</th>
                        <th scope="col">ID</th>
                        <th scope="col">Email</th>
                    </tr>
                </thead>
                <tbody>
                    <% patient.forEach((patient, nurseAdmin) => { %>
                        <tr>
                            <td><a href="/nurseAssign/<%= patient.id %> target="_blank" rel="noopener">Change ID</a></td>
                            <td><%= patient.nurseId %> </td>
                            <th scope="row"><%= patient.id %></th>
                            <td><%= patient.email %> </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No Patients found.</p>
        <% } %>
    </div>    

</div>
</body>
</html>